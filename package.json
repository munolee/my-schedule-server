{
  "name": "schdule-express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "rm -rf dist && mkdir dist && cp -r src/swagger.yaml dist/swagger.yaml && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "api-docs": "swagger-cli bundle ./src/swagger/openapi.yaml --outfile src/swagger.yaml --type yaml",
    "predev": "npm run api-docs"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "dependencies": {
    "@types/yamljs": "^0.2.31",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "swagger-cli": "^4.0.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "nodemon": "^2.0.20",
    "pre-commit": "^1.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
